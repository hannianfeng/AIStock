<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_dialog_border"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="ユーザー同意書とプライバシー保護"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="12dp"
        android:text="『ユーザサービスプロトコル』 と 『プライバシーポリシー』 に同意す"
        android:textAlignment="center"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_bottom_dialog_agree"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginHorizontal="54dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/loginbtn_border_ok"
        android:text="同意してログインする"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="35dp"
        android:textColor="#C8CACC"
        android:text="同意しない"/>
</LinearLayout>